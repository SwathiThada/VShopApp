    Layout = "~/Views/Shared/_Layout.cshtml";
}


<H2>@Model.Name</H2>
<ul>
    
    <li>Genre: @Model.Genre.Name</li>
    <li>Relesae Date: @Model.ReleaseDate.ToLongDateString()</li>
